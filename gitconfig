[user]
    name = James H. Linder
    email = james@jlinder.com
[core]
    autocrlf = false
    excludesfile = ~/.gitignore_global
[alias]
    a = add
    ap = add -p                        # pick lines to add
    b = branch
    ba = branch -a
    branches = branch -a
    c = commit -v
    co = checkout
    d = diff
    diffc = diff --cached
    heads = show-ref --heads
    lg = log --graph --pretty=format:'%Cred%h %d%Creset %s %Cblue(%ar by %an)'
    ll = log --name-status --color --graph
    pff = pull --ff-only
    pll = pull --rebase
    remotes = remote -v
    rollback = reset --hard HEAD~1     # erase last commit and related file edits (destructive!)
    s = status
    tags = show-ref --tags
    uncommit = reset --soft HEAD^      # erase last commit but keeps related file edits
