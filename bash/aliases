# Bash
if [[ "Darwin" == `uname` ]] ; then
    alias ls='ls -FG'
else
    alias ls='ls -F --color=auto'
fi

alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lal='ls -la'

alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# Handy commands
alias uuid='uuidgen | tr "[:upper:]" "[:lower:]"'

# Eject a device on OS X
alias eject='diskutil unmount'

# Ruby
alias uni='RAILS_ENV=development unicorn -c config/unicorn.rb'
alias r="time bundle exec rake"
alias fspec="time bundle exec rspec"

# Start/Stop postgres
alias start_postgres='launchctl load -w ~/Library/LaunchAgents/homebrew.mxcl.postgresql.plist'
alias stop_postgres='launchctl unload -w ~/Library/LaunchAgents/homebrew.mxcl.postgresql.plist'

# Git
alias gitclean="if [ 'master' = `git branch | grep '^* ' | sed -e 's/^[*] //'` ] ; then git branch --merged | grep -v \"\*\" | xargs git branch -d ; fi"

# Deploy notification commands
alias notif_rendering_dev="curl -H \"Content-Type: application/json\" -d '{ \"color\": \"red\", \"notify\": true, \"message\": \"quilltech-rendering-dev deployed\" }' \"https://api.hipchat.com/v2/room/${HIPCHAT_NOTIFICATIONS_ROOM}/notification?auth_token=${HIPCHAT_PERSONAL_V2_API_ACCESS_TOKEN}\""
alias notif_rendering_staging="curl -H \"Content-Type: application/json\" -d '{ \"color\": \"red\", \"notify\": true, \"message\": \"quilltech-rendering-staging deployed\" }' \"https://api.hipchat.com/v2/room/${HIPCHAT_NOTIFICATIONS_ROOM}/notification?auth_token=${HIPCHAT_PERSONAL_V2_API_ACCESS_TOKEN}\""
alias notif_rendering_sandbox="curl -H \"Content-Type: application/json\" -d '{ \"color\": \"red\", \"notify\": true, \"message\": \"quilltech-rendering-sandbox deployed\" }' \"https://api.hipchat.com/v2/room/${HIPCHAT_NOTIFICATIONS_ROOM}/notification?auth_token=${HIPCHAT_PERSONAL_V2_API_ACCESS_TOKEN}\""
alias notif_rendering_production="curl -H \"Content-Type: application/json\" -d '{ \"color\": \"red\", \"notify\": true, \"message\": \"quilltech-rendering-production deployed\" }' \"https://api.hipchat.com/v2/room/${HIPCHAT_NOTIFICATIONS_ROOM}/notification?auth_token=${HIPCHAT_PERSONAL_V2_API_ACCESS_TOKEN}\""
alias notif_qt_api_dev="curl -H \"Content-Type: application/json\" -d '{ \"color\": \"red\", \"notify\": true, \"message\": \"quilltech-quilltech-api-dev deployed\" }' \"https://api.hipchat.com/v2/room/${HIPCHAT_NOTIFICATIONS_ROOM}/notification?auth_token=${HIPCHAT_PERSONAL_V2_API_ACCESS_TOKEN}\""
alias notif_qt_api_staging="curl -H \"Content-Type: application/json\" -d '{ \"color\": \"red\", \"notify\": true, \"message\": \"quilltech-quilltech-api-staging deployed\" }' \"https://api.hipchat.com/v2/room/${HIPCHAT_NOTIFICATIONS_ROOM}/notification?auth_token=${HIPCHAT_PERSONAL_V2_API_ACCESS_TOKEN}\""
alias notif_qt_api_sandbox="curl -H \"Content-Type: application/json\" -d '{ \"color\": \"red\", \"notify\": true, \"message\": \"quilltech-quilltech-api-sandbox deployed\" }' \"https://api.hipchat.com/v2/room/${HIPCHAT_NOTIFICATIONS_ROOM}/notification?auth_token=${HIPCHAT_PERSONAL_V2_API_ACCESS_TOKEN}\""
alias notif_qt_api_production="curl -H \"Content-Type: application/json\" -d '{ \"color\": \"red\", \"notify\": true, \"message\": \"quilltech-quilltech-api-production deployed\" }' \"https://api.hipchat.com/v2/room/${HIPCHAT_NOTIFICATIONS_ROOM}/notification?auth_token=${HIPCHAT_PERSONAL_V2_API_ACCESS_TOKEN}\""

